<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black"
    tools:context=".test">

    <EditText
        android:id="@+id/para"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:background="#7E464444"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#B5928B8B"
        android:textSize="18sp"
        android:translationX="20dp"
        android:translationY="100dp" />

    <EditText
        android:id="@+id/asunto"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:background="#7E464444"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#B5928B8B"
        android:textSize="18sp"
        android:translationX="35dp"
        android:translationY="160dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Para:"
        android:textColor="#FA989899"
        android:textSize="20sp"
        android:translationX="19dp"
        android:translationY="110dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asunto:"
        android:textColor="#FA989899"
        android:textSize="20sp"
        android:translationX="19dp"
        android:translationY="165dp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="323dp"
        android:layout_height="331dp"
        android:layout_centerHorizontal="true"
        android:background="#7E464444"
        android:translationY="240dp" />

    <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="#FC000000"
            android:textColor="#C8FFFFFF" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Xmail"
            android:textColor="#DDC4C1C1" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cancel"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:background="@drawable/campo"
        android:translationX="19dp"
        android:translationY="40dp"
        app:cardBackgroundColor="#77ACA9A9"
        app:cardCornerRadius="20dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="#D7F0EBEB"
            android:textSize="18sp"
            android:translationX="50dp"
            android:translationY="42dp"

            />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/send"
        android:layout_width="143dp"
        android:layout_height="50dp"
        android:background="@drawable/campo"
        android:translationY="600dp"
        app:cardBackgroundColor="#63CFCDCD"
        app:cardCornerRadius="20dp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_send"
            android:layout_width="wrap_content"


            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Send"
            android:textColor="#D7F0EBEB"
            android:textSize="24sp"
            android:translationY="608dp"

            />
    </RelativeLayout>



</RelativeLayout>


