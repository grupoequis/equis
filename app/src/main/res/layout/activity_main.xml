<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="140dp"
            android:layout_height="129dp"
            android:translationY="100dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/night_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:lineSpacingExtra="5dp"
            android:text="Log in to XMail"
            android:textColor="#D7F0EBEB"
            android:textSize="24dp"
            android:translationY="100dp" />

        <EditText
            android:id="@+id/etMail"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/campo"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="Email"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#B5928B8B"
            android:textSize="18sp"
            android:translationY="130dp"
            android:drawableLeft="@drawable/ic_action_email"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            />


        <EditText
            android:id="@+id/etPassword"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/campo"
            android:ems="10"
            android:inputType="textPassword"
            android:text="Passworrthjrttrd"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="#B5928B8B"
            android:textSize="18sp"
            android:translationY="150dp"
            android:drawableLeft="@drawable/ic_action_password"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            />

        <CheckBox
            android:id="@+id/night_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember me"
            android:textColor="#DFA09B9B"
            android:textColorHint="#008A8080"
            android:textSize="12dp"
            android:layout_marginLeft="25dp"
            android:translationY="150dp"
            />


        <TextView
            android:id="@+id/tvLogIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Log In"
            android:textColor="#D7F0EBEB"
            android:textSize="20sp"
            android:translationY="130dp" />

        <Switch
            android:id="@+id/night_Mode"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Night Mode On "
            android:textColor="#B2DBDBDB"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:translationY="220dp"
            />

    </LinearLayout>
</ScrollView>